<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.payease.travelease.hotspottest.MainActivity">
    <TextView
        android:id="@+id/textView"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="This will set the hotspot SSID to Test1234 password=qwer1234, security: WPA2 PSK. Before pressing the button, please disable hotspot in settings."
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="16dp" />
    <Button
        android:id="@+id/button_update_hotspot_config"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Update Hotspot Config"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="58dp" />
    <Button
        android:id="@+id/button_open_hotspot_settings"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Open Hotspot settings page"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="114dp" />
</LinearLayout>
